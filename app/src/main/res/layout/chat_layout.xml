<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/LeftMessageId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:text="left message"
        android:textColor="#000000"
        android:textSize="15sp"
        android:background="@drawable/left_message"
        android:padding="10dp">

    </TextView>


    <TextView
        android:id="@+id/RightMessageId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:text="right message"
        android:background="@drawable/right_message"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_alignParentTop="@+id/LeftMessageId"
        android:layout_margin="10dp"/>


</RelativeLayout>
